<!-- Ant makefile for DGModeller -->  <project name="DGModeler" default="compile">    <property name="classpathr" value="lib/matrixclient.jar:lib/jgraph.jar:lib/jgraphaddons.jar:lib/jaxb-api.jar:lib/jaxb-impl.jar:lib/jaxb-libs.jar:lib/jaxb-xjc.jar"/>      <!-- set up the classpath --> 	<path id="main.classpath"> 		<pathelement location="bin"/> 		<fileset dir="lib" includes="**.jar"/> 	</path>    <target name="compile" description="Compile everything."> 	  <!--Get rid of the deathtrap--> 	  <delete dir="src/dgbuilder"/>     <!-- First, ensure the build directory exists. -->     <mkdir dir="bin" />     <!-- Build all the core source files -->     <javac srcdir="src" destdir="bin" target="1.3"> 		<classpath refid="main.classpath"/> 		<exclude name="" />     </javac>   </target>     <target name="build" depends="compile" description="Build dgmodeller.jar.">     <!-- First, ensure the lib directory exists. -->     <mkdir dir="lib" />     <mkdir dir="bin/dgtab/resources"/>     <mkdir dir="bin/dgtab/properties"/>     <copy todir="bin/dgtab/resources"> 			<fileset dir="src/dgtab/resources"/> 	</copy> 	<copy todir="bin/dgtab/properties"> 			<fileset dir="src/dgtab/properties"/> 	</copy>     <!-- Build dgmodeller.jar. -->     <jar jarfile="lib/dgmodeller.jar" > 		<fileset dir="bin"/> 		<!-- fileset dir="lib" includes="**.jar"/ -->     </jar>   </target>    <target name="run" depends="build" description="Runs the DGModeller program.">     <java classname="dgtab.DGMain" fork="true"> 		<classpath refid="main.classpath"/> 	</java>              </target>     <target name="clean" description="Delete the build files.">     <delete dir="bin/dgtab" />     <delete file="lib/dgmodeller.jar" />   </target> </project> 