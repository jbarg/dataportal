#!/bin/bash

# This shell is for running 'anslex' via SRB Proxy
# Written by: Roman Olschanowsky 2004
#
# anhdrinfo: Analyze Header Info
# anslex: Analyze Slice Extractor
#
# If you are interested in these programs, contact:
# Steve Lamont, UCSD NCMIR Lab
# spl@ncmir.ucsd.edu
# (858) 822-0760

# Make sure file in SRB Vault exists
if [ ! -e $1 ]; then 
  exit
fi

inputfile=$1
shift
while [ 1 -le $# ]; do
  args="$args $1"
  shift
done

# Uncomment for testing, and comment out job below
#echo $args $inputfile

# Do the job
commands/anslex.real $args $inputfile

exit 0
