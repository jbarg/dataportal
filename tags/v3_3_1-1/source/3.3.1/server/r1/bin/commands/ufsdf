#!/bin/sh
#
# Returns Resource Disk Space Info
#

# The Partition we are interested in:
list=`df -k $1 | grep -v Filesystem`

i=1

if [ "$mymachid" = "ibmrs6000" ]
then
 for item in $list ; do
   if [ "$i" =  "2" ]
   then
     j="$item" 
   fi

   if [ "$i" = "3" ]
   then
     j=`expr $j - $item`
     echo $j 
     echo $item 
   fi

   i=`expr $i +  1`
 done
else 
 for item in $list ; do
   if [ "$i" = "3" ]
   then
     echo $item 
   fi

   if [ "$i" = "4" ]
   then
     echo $item 
   fi

   i=`expr $i +  1`
 done
fi

exit 0
